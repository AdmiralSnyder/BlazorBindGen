@page "/"

@using BlazorBindGen
@inject IJSRuntime runtime

<button @onclick="Heavy">Do Work</button>

<SurveyPrompt Title="How is Blazor working for you?" />

@code{

	protected override async Task OnInitializedAsync()
	{
		await base.OnInitializedAsync();
		
	}
	protected  async  Task Heavy()
	{
		Binder loader = new Binder(runtime);
		await loader.Init();
		var obj=loader.ThisRef();
		Console.WriteLine("inner width = "+obj.Prop<int>("innerWidth"));
	}
}